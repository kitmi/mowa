{
    "loggers": {
        "general": {
            "transports": [
                {
                    "type": "console",
                    "options": {
                        "level": "verbose",
                        "format": "#!jsv:winston.format.combine(winston.format.colorize(), winston.format.simple())"
                    }
                },
                {
                    "type": "file",
                    "options": {
                        "level": "info",
                        "filename": "#!jst:file-${now.format('YYYYMMDD')}.log"
                    }
                }
            ]
        },
        "access": {
            "transports": [
                {
                    "type": "daily-rotate-file",
                    "options": {
                        "level": "info",
                        "filename": "access-%DATE%.log",
                        "datePattern": "YYYYMMDD"
                    }
                }
            ]
        }
    },
    "koa": {
        "httpPort": 3000
    },
    "middlewares": {
        "accessLog": {
            "logger": "access"
        },
        "compress": {},
        "etag": {},
        "bodyParser": {},
        "methodOverride": {}
    },
    "routing": {
        "/": "home.index"
    }
}
