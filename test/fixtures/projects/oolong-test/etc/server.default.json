{
    "settings": {
        "cli": {
            "general": {
                "consoleEnabled": true,
                "fileLogEnabled": true,
                "fileLogFilename": "mowa-cli.log",
                "fileLogOverwrite": true
            }
        }
    },
    "loggers": {
        "general": {
            "transports": [{
                "type": "console",
                "options": {
                    "level": "verbose",
                    "format": "#!jsv:winston.format.combine(winston.format.colorize(), winston.format.simple())"
                }
            }]
        }
    },
    "koa": {
        "httpPort": 3000
    },
    "middlewares": {
        "compress": {},
        "etag": {}
    },
    "routing": {
        "/": "home.index"
    }
}